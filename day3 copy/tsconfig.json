{
    "compilerOptions": {
      "target": "es2022",
      "module": "node16",
      "lib": ["ES2022"],
      "moduleResolution": "node16",
      "rootDir": "../day-template",
      "outDir": "../day-template/build",
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": false
    },
    "include": ["../day-template/src/**/*.ts"],
    "types": ["jest", "node"]
  }